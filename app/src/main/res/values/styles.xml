<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="title">
        <item name="android:textColor">#009EE2</item>
        <item name="android:textSize">21sp</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="rowStyleBlue">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">21sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingLeft">24dp</item>
    </style>
    <style name="rowStyleWhite">
        <item name="android:textColor">#009EE2</item>
        <item name="android:textSize">21sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingLeft">24dp</item>
    </style>
    <style name="rowStyleViolet">
        <item name="android:textColor">@color/LightRose</item>
        <item name="android:textSize">21sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingLeft">24dp</item>
    </style>
    <style name="rowStyleLightRose">
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:textSize">21sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingLeft">24dp</item>
    </style>
    <style name="rowStyleCard">
        <item name="android:textColor">#009EE2</item>
        <item name="android:textSize">21sp</item>
        <item name="android:textAllCaps">true</item>
    </style>
    <style name="rowStyleCardText">
        <item name="android:textSize">15sp</item>
    </style>
</resources>
